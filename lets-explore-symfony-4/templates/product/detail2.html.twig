{% extends 'base.html.twig' %}

{% block title %}
	{{ product.name }}
{% endblock %}

{% block body %}
	<div class="container">
		<div>
			<h1>Product details</h1>
		</div>
		<div class="row mt-3 mb-4">
			<div class="col-md-4">
				<img src="https://via.placeholder.com/600x400" alt="{{ product.name }}" class="img-fluid">
				
			</div>
			<div class="col-md-8">
				<table class="table table-striped">
					<tr>
						<th>Product name</th>
						<td>{{ product.name }}</td>
					</tr>
					<tr>
						<th>Price</th>
						<td>{{ product.price }}</td>
					</tr>
					<tr>
						<th>Description</th>
						<td>{{ product.description }}</td>
					</tr>
					<tr>
						<th>Attached file</th>
						<td>
						{% if product.brochureFilename!='' %}
						<a href="{{ path('product_brochure_download',{file:product.brochureFilename})}}">{{ product.brochureFilename }}</a>
						{% endif %}
						</td>
					</tr>
				</table>
				<a class="btn btn-primary btn-lg " role="button" aria-disabled="false" href="/product">Products list</a>
				<a class="btn btn-secondary btn-lg " role="button" aria-disabled="false" href="{{path('edit_product',{id:product.id})}}">Edit</a>
			</div>
		</div>
	</div>
{% endblock %}
